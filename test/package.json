{
  "name": "tests-aplicacion-gestion-tareas",
  "version": "1.0.0",
  "description": "Tests independientes para la aplicación de gestión de tareas",
  "scripts": {
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --config jest.backend.config.js",
    "test:frontend": "jest --config jest.frontend.config.js",
    "test:backend:watch": "jest --config jest.backend.config.js --watch",
    "test:frontend:watch": "jest --config jest.frontend.config.js --watch",
    "test:coverage": "npm run test:backend:coverage && npm run test:frontend:coverage",
    "test:backend:coverage": "jest --config jest.backend.config.js --coverage",
    "test:frontend:coverage": "jest --config jest.frontend.config.js --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "babel-jest": "^29.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "projects": [
      "./jest.backend.config.js",
      "./jest.frontend.config.js"
    ]
  }
}